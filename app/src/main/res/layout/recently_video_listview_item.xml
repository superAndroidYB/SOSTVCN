<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingTop="@dimen/y10"
                android:paddingBottom="@dimen/y10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recently_item_imageview"
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/y162"
        android:background="@mipmap/home_video_cover"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/recentlytime_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/recently_item_imageview"
        android:layout_alignRight="@id/recently_item_imageview"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginRight="@dimen/y10"
        android:background="@drawable/tjsp_shape"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="@dimen/x26"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x32"
        android:layout_toRightOf="@+id/recently_item_imageview"
        android:layout_toEndOf="@+id/recently_item_imageview"
        android:layout_alignBottom="@+id/recently_item_imageview">

        <TextView
            android:id="@+id/recentlytitle_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="走向晚雨的经验"
            android:textColor="#242424"
            android:textSize="@dimen/x26" android:layout_marginTop="@dimen/y10"/>

        <TextView
            android:id="@+id/recentlydate_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-00"
            android:textColor="#999999"
            android:textSize="@dimen/x26" android:layout_marginTop="@dimen/y10"/>

        <TextView
            android:id="@+id/recentlyhot_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="782次播放"
            android:textColor="#999999"
            android:textSize="@dimen/x26" android:layout_marginTop="@dimen/y10"/>

    </LinearLayout>


</RelativeLayout>