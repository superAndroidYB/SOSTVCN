<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/audio_item_image"
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/y230"
        android:scaleType="centerCrop"
        android:src="@mipmap/video_cover"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal" android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/audio_item_image"
        android:layout_alignEnd="@+id/audio_item_image">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:background="@mipmap/audio_song"/>

        <TextView
            android:id="@+id/audio_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_gravity="center_vertical"
            android:text="58è®²"
            android:textColor="@color/white"
            android:textSize="@dimen/x22"/>

    </LinearLayout>

    <TextView
        android:id="@+id/audio_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/audio_item_image"
        android:layout_marginTop="@dimen/x15"
        android:singleLine="true"
        android:textColor="#2B2B2B"
        android:textSize="@dimen/x26"/>

    <TextView
        android:id="@+id/audio_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/audio_item_title"
        android:layout_marginTop="@dimen/x5"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="@dimen/x24"/>


</RelativeLayout>