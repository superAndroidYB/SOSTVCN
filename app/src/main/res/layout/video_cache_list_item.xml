<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:minHeight="@dimen/y80"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/video_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="264.哈哈哈哈"
        android:textSize="@dimen/x22"
        android:layout_centerVertical="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginLeft="22dp"
        android:layout_marginStart="@dimen/x26"/>

    <ImageView
        android:id="@+id/cache_flag_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
        android:src="@mipmap/videofull_caching"/>

</RelativeLayout>